@model TaskModel
@using TaskManagment.Domain.Enums;

<form asp-action="CreateTask" method="post">
<div class="form-group">
                        <label asp-for="Name">Task Name</label>
                        <input class="form-control" asp-for="Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description">Task Description</label>
                        <textarea class="form-control" asp-for="Description"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Priority">Priority</label>
                        <select id="taskPriority" asp-items="Html.GetEnumSelectList<TaskPriority>()" class="form-control" asp-for="Priority">
                            
                        </select>
                        <span asp-validation-for="Priority" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Create</button>
                    <button class="btn btn-danger">Cancel</button>
                </form>